{
  "name": "@digest/digest-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "tauri": "tauri",
    "build-pdfjs": "pnpm -C ../../packages/pdf-js exec npx gulp generic-legacy",
    "prepare-public-vendor": "mkdirp ./public/vendor/pdfjs",
    "copy-pdfjs-js": "dotenv -- cross-var cpx \"%PDFJS_BUILD_PATH%/pdf*\" ./public/vendor/pdfjs",
    "copy-pdfjs-fonts": "dotenv -- cross-var cpx \"%PDFJS_FONTS_PATH%/{cmaps, standard_fonts}/*\" ./public/vendor/pdfjs",
    "copy-pdfjs-css": "dotenv -- cross-var cpx \"%PDFJS_STYLE_PATH%/{annotation_layer_builder, text_layer_builder}.css ./public/vendor/pdfjs",
    "copy-pdfjs": "pnpm copy-pdfjs-js && pnpm copy-pdfjs-fonts && copy-pdfjs-style",
    "copy-pdfjs-to-foliate": "cpx \"./public/vendor/pdfjs/**/*\" ../../packages/foliate-js/vendor/pdfjs",
    "setup-pdfjs": "pnpm build-pdfjs && pnpm prepare-public-vendor && pnpm copy-pdfjs && pnpm copy-pdfjs-to-foliate"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.4.1",
    "@tauri-apps/plugin-dialog": "~2.2.0",
    "@tauri-apps/plugin-fs": "^2.2.0",
    "@tauri-apps/plugin-http": "~2.4.2",
    "@tauri-apps/plugin-log": "^2.3.1",
    "@tauri-apps/plugin-os": "~2.2.1",
    "@zip.js/zip.js": "^2.7.52",
    "cpx": "^1.5.0",
    "dotenv-cli": "^8.0.0",
    "epubjs": "^0.3.93",
    "foliate-js": "workspace:*",
    "js-md5": "^0.8.3",
    "mkdirp": "^3.0.1",
    "next": "15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.15",
    "@tauri-apps/cli": "^2.4.1",
    "@types/node": "^22.13.11",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "daisyui": "^5.0.9",
    "eslint": "^9.23.0",
    "eslint-config-next": "15.2.3",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.15",
    "typescript": "^5.8.2"
  }
}
